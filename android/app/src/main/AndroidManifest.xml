<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jc.vehiclemvp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="jc.vehiclemvp.VehicleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="jc.vehiclemvp.screens.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="jc.vehiclemvp.screens.HomeScreenActivity">
        </activity>

        <activity android:name="jc.vehiclemvp.screens.VehicleScreenActivity">
        </activity>

    </application>

</manifest>
